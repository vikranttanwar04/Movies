<% layout("/layouts/boilerplate") %>    
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<style>
    a{
        text-decoration: none;
    }
</style>
<body>
    <h1 class="text-center">UPLOAD A MOVIE</h1>
    <div id="newForm">
        <form class="container row p-0" method="post" action="/">
            <div class="col-12 ">
                <div>
                    <label for="movie" class="form-label">Movie Name :</label>
                    <input type="text" class="form-control" id="movie" placeholder="Enter Movie Name" name="movieName">
                </div><br>
                <div>
                    <label for="url" class="form-label">Movie URL : </label>
                    <input type="text" class="form-control" id="url" placeholder="Enter Movie URL" name="url">
                </div><br>
                <div>
                    <button class="btn btn-outline-dark">Upload</button>
                </div>
            </div>
        </form>
    </div>
</body>